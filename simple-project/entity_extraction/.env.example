# LLM Configuration (for LangChain)
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Alternative LLM providers (uncomment if using)
ZHIPUAI_API_KEY=your_zhipuai_api_key
ZHIPUAI_API_BASE=https://open.bigmodel.cn/api/paas/v4
ZHIPUAI_MODEL=glm-4

# Extraction Configuration
LLM_PROVIDER=openai
EXTRACTION_TEMPERATURE=0.0
EXTRACTION_MAX_RETRIES=3

# Validation Configuration
VALIDATION_STRICT=true
VALIDATION_REQUIRE_ALL_FIELDS=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/extraction.log

# Output Configuration
OUTPUT_FORMAT=json
OUTPUT_INCLUDE_CONFIDENCE=true
